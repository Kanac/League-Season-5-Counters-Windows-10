                        Style="{StaticResource Header}">
                <DataTemplate>
                    <Grid Margin="0,-20,0,0"
                      Loaded="GridAd_Loaded">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="90" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="90" />
                        </Grid.RowDefinitions>
                     

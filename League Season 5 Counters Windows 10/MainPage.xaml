<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:League_Season_5_Counters_Windows_10"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:data="using:League_of_Legends_Counterpicks.Data"
      xmlns:AD="using:Microsoft.AdMediator.Universal"
      xmlns:ValueConverter="using:League_of_Legends_Counterpicks.Converters"
      x:Class="League_Season_5_Counters_Windows_10.MainPage"
      DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
      d:DataContext="{Binding Source={d:DesignData Source=/DataModel/Data.json, Type=data:DataSource}}"
      mc:Ignorable="d">
    
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="FullScreen"
                          Label="Ad Block"
                          Click="AdBlock_Click" />
            <AppBarButton Icon="Comment"
                          Label="Send Feedback"
                          Click="Comment_Click" />
            <AppBarButton Icon="Like"
                          Label="Tweet"
                          Click="Tweet"/>
            <AppBarButton Icon="Document"
                          Label="Change Log"
                          Click="ChangeLog_Clicked" />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource HubBackgroundImageBrush}" Loaded="GridAd_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="2.7*"/>
            <RowDefinition Height="7.5*" />
            <RowDefinition Height="90" />
        </Grid.RowDefinitions>

        <!--<UI:AdControl HorizontalAlignment="Center"
                      ApplicationId="73bc3429-e045-4dc9-ba6f-3e3561a1fc9a"
                      VerticalAlignment="Top"
                      Width="728"
                      Height="90"
                      Loaded="Ad_Loaded"
                      AutoRefreshIntervalInSeconds="60"
                      AdUnitId="192860" />-->

        <AD:AdMediatorControl x:Name="AdMediator_2" Id="AdMediator-Id-2" HorizontalAlignment="Center" Height="90" VerticalAlignment="Bottom" Width="728"/>

        <!--Enter inside the dictionary's only key, groups, and then into the list holding them -->
        <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
               
            <!--<TextBox Name="TextBox"
                     HorizontalAlignment="Left"
                     Width="300"
                     Margin="15,0,15,0"
                     IsReadOnly="True"
                     Tapped="TextBox_Tapped"
                     TextAlignment="Center"
                     Text="Tap to Search">
            </TextBox>-->

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
       
                <ListView ItemsSource="{Binding Roles}"
                          SelectionMode="None"
                          IsItemClickEnabled="True"
                          ItemClick="GroupSection_ItemClick">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="15,0,0,20">
                                <TextBlock Text="{Binding UniqueId}"
                                           Style="{ThemeResource SubheaderTextBlockStyle}"
                                           Foreground="White"
                                           FontSize="28"
                                           FontFamily="Segoe WP Black" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1">
                        <!--<TextBlock HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   FontSize="19"
                                   FontFamily="Segoe WP Black"
                                   VerticalAlignment="Center"
                                   Foreground="#FFF3FD29"> Add your own counters, easy matchups, and synergy picks now!</TextBlock>-->
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right">

            <TextBlock Text="By a Masters Player"
                       Margin="0,0,20,0"
                       FontSize="15"
                       Foreground="#FFCCDDF7" />
            <TextBlock Text="Raklor"
                       TextAlignment="Center"
                       Margin="0,0,20,0"
                       FontSize="15"
                       Foreground="#FFCCDDF7" />
        </StackPanel>
        <AD:AdMediatorControl x:Name="AdMediator_1" Id="AdMediator-Id-1" HorizontalAlignment="Center" Height="90" Grid.Row="2" VerticalAlignment="Bottom" Width="728"/>

        <!--<UI:AdControl HorizontalAlignment="Center"
                      ApplicationId="bb8be079-3202-4948-8b29-cfd54367d723"
                      VerticalAlignment="Top"
                      Width="480"
                      Height="80"
                      Grid.Row="2"
                      Loaded="Ad_Loaded"
                      AutoRefreshIntervalInSeconds="60"
                      AdUnitId="231538" />-->
       

    </Grid>
</Page>
    
   